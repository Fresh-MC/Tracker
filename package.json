{
  "name": "tracker-kpr",
  "version": "1.0.0",
  "description": "Tracker KPR - Full Stack MERN Application with Authentication",
  "main": "server/src/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd frontend && npm run dev",
    "server:prod": "cd server && npm start",
    "client:build": "cd frontend && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules server/node_modules frontend/node_modules",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mern",
    "react",
    "express",
    "mongodb",
    "authentication",
    "jwt",
    "tracker"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
