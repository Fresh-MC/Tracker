# ==============================================
# FRONTEND ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ----- API Configuration -----
# Backend API base URL
VITE_API_URL=http://localhost:3000
# Production example: https://your-backend.onrender.com

# ----- WebSocket Configuration -----
# Chat server URL
VITE_CHAT_URL=http://localhost:4000
# Production example: https://your-chat-server.onrender.com

# ----- Authentication -----
# JWT token storage key
VITE_AUTH_TOKEN_KEY=auth_token

# ----- Application Configuration -----
VITE_APP_NAME=Tracker KPR
VITE_APP_VERSION=1.0.0

# ----- Feature Flags (optional) -----
# VITE_ENABLE_CHAT=true
# VITE_ENABLE_ANALYTICS=false

# ----- External Services (optional) -----
# Google Analytics
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry Error Tracking
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ----- Debug Mode -----
VITE_DEBUG=false
# Set to true for additional console logging
